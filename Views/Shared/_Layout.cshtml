<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebLectura</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#about">Acerca de este sitio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Revistas On Line
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="https://www.gente.com.ar">Gente</a>
                                <a class="dropdown-item" href="https://ahira.com.ar">Ahira</a>
                                <a class="dropdown-item" href="http://www.scielo.org.ar/scielo.php">SciELO</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Libros On Line
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="https://booknet.com/es/reader/una-luz-de-colores-b407306">Una luz de colores</a>
                                <a class="dropdown-item" href="https://booknet.com/es/book/papa-soltero-b410079">Papá soltero</a>
                                <a class="dropdown-item" href="https://booknet.com/es/book/dulce-equivocacion-b403139">Dulce equivocación</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Blogs
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="https://economipedia.com">Economipedia</a>
                                <a class="dropdown-item" href="https://www.elblogsalmon.com">El Blog Salmón</a>
                                <a class="dropdown-item" href="https://www.elespanol.com/el-cultural/blogs/">El cultural</a>
                                <a class="dropdown-item" href="https://arte.casa">Arte en casa</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="display:flex; justify-content:space-between">
            Copyright &copy; 2022 - Bruno Agostini

            <div>
                <a href="https://github.com/MinecraftDorado"><i class="fab fa-github-square fa-2x" style="color:black; padding-right: 12.5px;"></i></a>
                <a href="mailto:contacto@brunoagostini.com?subject=Programaci%C3%B3n%202%20-%20Parcial%202"><i class="far fa-envelope fa-2x" style="color:black"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/4f596f3945.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
